    "cli:dist": "node dist/src/cli",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pubfunc/nestjs-yargs"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
